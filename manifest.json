{
  "manifest_version": 2,
  "name": "Price Wise",
  "version": "1.0",

  "description": "Gives you the price comparison with other sites",

  "content_scripts": [
    {
      "matches": [
          "https://www.hamrobazaar.com/*",
          "https://www.daraz.com.np/*",
          "https://www.sastodeal.com/*"
      ],
      "js": ["index.js"]
    }
  ],
   "permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://20.212.240.130:9500/*",
    "https://20.212.240.130:9500/*",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "scripting"
  ]
}
